@model IEnumerable<Order>

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista Zamówień</title>
    <!-- Linki do Bootstrap (wersja minimalna) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f9f9f9;
            padding-top: 50px;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
        }

        .table-container {
            background: white;
            border-radius: 5px;
            padding: 20px;
            margin-top: 30px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

            table thead {
                background-color: #007bff;
                color: white;
            }

            table th, table td {
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            table tr:hover {
                background-color: #f1f1f1;
            }

        .btn-info {
            background-color: #007bff;
            border: none;
            padding: 8px 15px;
            color: white;
            border-radius: 3px;
            transition: background-color 0.3s ease;
        }

            .btn-info:hover {
                background-color: #0056b3;
            }
        /* Dostosowanie szerokości kolumn */
        table th, table td {
            padding-left: 8px;
            padding-right: 8px;
        }

        .order-id, .order-date {
            width: 20%; /* Zmniejszenie szerokości ID i Data */
        }

        .total-amount, .details {
            width: 25%; /* Szerokość dla Łącznej kwoty i Szczegółów */
        }

        /* Usunięcie niebieskiego tła z nagłówka */
        h1 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2rem;
            color: #333; /* Możesz ustawić kolor według preferencji */
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>Lista Zamówień</h1> <!-- Zmienione: usunięcie niebieskiego tła -->

        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th class="order-id">ID Zamówienia</th>
                        <th class="order-date">Data Zamówienia</th>
                        <th class="total-amount">Łączna Kwota</th>
                        <th class="details">Szczegóły</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td class="order-id">@order.OrderId</td>
                            <td class="order-date">@order.OrderDate.ToString("dd-MM-yyyy")</td>
                            <td class="total-amount">@order.TotalAmount.ToString("F2") PLN</td>
                            <td class="details">
                                <a href="@Url.Action("OrderDetails", "OrderController1", new { orderId = order.OrderId })" class="btn btn-info btn-sm">
                                    Szczegóły
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Skrypt Bootstrapa -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>