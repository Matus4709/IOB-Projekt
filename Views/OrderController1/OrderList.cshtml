@using UserManagmentApp.Models

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista Zamówień</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f7fa;
            margin: 0;
            padding: 0;
            line-height: 1.6;
        }

        /* Stylizacja nagłówka */
        header h1 {
            text-align: center;
            color: #333;
            font-size: 2rem;
            margin: 20px 0 10px;
            font-weight: normal; /* Usunięcie pogrubienia */
        }

        /* Kontener listy zamówień */
        .order-list-container {
            max-width: 1100px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        /* Styl tabeli */
        .table-container {
            margin-top: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 1rem;
        }

            table thead {
                background-color: #007bff;
                color: white;
            }

            table th, table td {
                padding: 14px 16px;
                text-align: center;
                vertical-align: middle; /* Wyrównanie tekstu i przycisków w pionie */
                border-bottom: 1px solid #ddd;
            }

            table tbody tr:hover {
                background-color: #f1f1f1;
            }

        /* Przyciski */
        .btn-info {
            background-color: #007bff;
            color: white;
            border-radius: 5px;
            padding: 8px 16px;
            text-decoration: none;
            font-size: 0.9rem;
            margin-right: 8px;
            transition: background-color 0.3s;
            display: inline-block;
        }

            .btn-info:hover {
                background-color: #0056b3;
            }

    </style>
</head>
<body>

    <!-- Nagłówek -->
    <header>
        <h1>Lista Zamówień</h1>
    </header>

    <!-- Kontener listy zamówień -->
    <div class="order-list-container">
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Numer Zamówienia</th>
                        <th>Data Zamówienia</th>
                        <th>Łączna Kwota</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.OrderDate.ToString("dd-MM-yyyy")</td>
                            <td>@order.TotalAmount.ToString("F2") PLN</td>
                            <td>
                                <a href="@Url.Action("OrderDetails", "OrderController1", new { orderId = order.OrderId })" class="btn-info">
                                    Szczegóły
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
